<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkestgreen"
    tools:context=".settings">

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:srcCompat="@drawable/settings231" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="161dp"
        android:layout_height="68dp"
        android:text="Settings"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:textSize="42sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView18"
        app:layout_constraintVertical_bias="0.027" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewofip"
        android:layout_width="356dp"
        android:layout_height="76dp"
        app:cardBackgroundColor="@color/darkestgreen"
        app:layout_constraintBottom_toTopOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:fontFamily="@font/poppins_bold"
            android:paddingLeft="10dp"

            android:text="IP Configuration"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="109dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="250dp"
            app:srcCompat="@drawable/ipaddress" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="356dp"
        android:layout_height="76dp"
        app:cardBackgroundColor="@color/darkestgreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.27">

        <EditText
            android:layout_width="251dp"
            android:layout_height="match_parent"

            android:hint="Enter Base URL"
            android:textColorHint="@color/white" />

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="250dp"
            android:padding="10dp"
            app:srcCompat="@drawable/login" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewoflogout"
        android:layout_width="356dp"
        android:layout_height="76dp"
        app:cardBackgroundColor="@color/darkestgreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.398" >

        <TextView
            android:id="@+id/textView61"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:fontFamily="@font/poppins_bold"
            android:paddingLeft="10dp"


            android:text="Logout"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView231"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="250dp"
            android:padding="10dp"
            app:srcCompat="@drawable/logout" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>